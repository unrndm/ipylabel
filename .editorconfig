# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

# default styling with js in mind
[*]
charset = utf-8
indent_size = 2
end_of_line = lf
indent_style = space
trim_trailing_whitespace = false
insert_final_newline = true

# leave trailing whitespace in MarkDown files
[*.md]
trim_trailing_whitespace = false

# override indent size for python
[*.py]
indent_size = 4
